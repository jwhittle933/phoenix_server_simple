<h2> Topics </h2>

<ul class="container">
    <%= for topic <- @topics do %>
        <li>
            <%= topic.title %>
            <%= link "Edit", to: topic_path(@conn, :edit, topic), class: "btn btn-warning" %>
            <%= link "Delete", to: topic_path(@conn, :delete, topic), method: :delete, class: "btn btn-danger"%>
        </li>
    <% end %>
</ul>

<div class="container">
    <%= link to: topic_path(@conn, :new), class: "btn btn-success" do %>
        New Item
    <% end %>
</div>